<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/friend_list_bg_repeat"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/color_lan" >

        <ImageView
            android:id="@+id/city_sort_imageView1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@android:drawable/ic_menu_revert" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="城市空气质量排行榜"
            android:textColor="@color/color_bai_8"
            android:textSize="25sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/city_cort_textview"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="城市"
            android:textColor="@color/color_bai_8"
            android:textSize="20sp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_toLeftOf="@+id/city_cort_textview"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="排名"
            android:textColor="@color/color_bai_8"
            android:textSize="20sp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_toRightOf="@+id/city_cort_textview"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="质量指数"
            android:textColor="@color/color_bai_8"
            android:textSize="20sp" />
    </RelativeLayout>
    
    <ListView 
        android:id="@+id/city_sort_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" >
    </ListView>

</LinearLayout>